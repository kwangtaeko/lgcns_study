{{>layouts/header}}

<header>
    <h1><i class="bi bi-building"></i> 회사소개</h1>
    <p>데이터로 세상을 읽는 기업, STOCK Corp</p>
</header>

<section class="about-section container my-5">
    {{#about}}
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=800&q=80" class="img-fluid" alt="Company Office">
            </div>
            <div class="col-md-6">
                <h2 class="section-title text-start">{{title}}</h2>
                <p class="text-muted">{{content}}</p>
            </div>
        </div>
    {{/about}}

    {{^about}}
        <div class="text-center py-5 text-muted">
            <i class="bi bi-exclamation-circle fs-1 mb-3 d-block"></i>
            <p class="fs-5">{{noAboutMessage}}</p>
        </div>
    {{/about}}
</section>
<button class="btn btn-primary btn-floating" type="button" data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasWrite" aria-controls="offcanvasWrite">
    <i class="bi bi-pencil-square"></i>
</button>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasWrite" aria-labelledby="offcanvasWriteLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasWriteLabel">
            <i class="bi bi-pencil"></i> 회사 정보 등록
        </h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <form action="/about/save" method="post">
            <div class="mb-3">
                <label class="form-label">회사명</label>
                <input type="text" class="form-control" name="title" required />
            </div>
            <div class="mb-3">
                <label class="form-label">회사소개 내용</label>
                <textarea class="form-control" name="content" rows="5" required></textarea>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> 저장
                </button>
            </div>
        </form>
    </div>
</div>
{{#msg}}
    <div class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index:1055;">
        <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
            {{msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
{{/msg}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

{{>layouts/footer}}

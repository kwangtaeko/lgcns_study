{{>layouts/header}}

<div class="container my-5">
    {{#msg}}
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle-fill"></i>
            {{msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/msg}}

    <h2 class="mb-4 text-center fw-bold"><i class="bi bi-graph-up"></i> 주식 목록</h2>
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <button class="btn btn-sm btn-primary" id="refreshBtn">
                <i class="bi bi-arrow-clockwise"></i> 새로고침
            </button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>종목코드</th>
                <th>종목명</th>
                <th>현재가</th>
                <th>등락률</th>
                <th>거래량</th>
                <th>시가총액</th>
                <th>업종</th>
                <th>상세보기</th>
            </tr>
            </thead>
            <tbody>
            {{#stockList}}
                <tr onclick="location.href='/stock/getStock/{{id}}'" style="cursor:pointer;">
                    <th>{{id}}</th>
                    <td>{{code}}</td>
                    <td class="fw-semibold text-primary">{{name}}</td>
                    <td>{{formattedPrice}}원</td>
                    <td class="{{colorClass}}">{{rate}}%</td>
                    <td>{{formattedVolume}}</td>
                    <td>{{formattedMarketCap}}</td>
                    <td>{{sector}}</td>
                    <td>
                        <a href="/stock/getStock/{{id}}" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i> 보기
                        </a>
                    </td>
                </tr>
            {{/stockList}}
            {{^stockList}}
                <tr>
                    <td colspan="9" class="text-muted py-4">등록된 주식 정보가 없습니다.</td>
                </tr>
            {{/stockList}}
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-end mt-3">
        <button class="btn btn-warning" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasStockForm"
                aria-controls="offcanvasStockForm">
            <i class="bi bi-pencil-square"></i> 새 주식 등록
        </button>
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasStockForm" aria-labelledby="offcanvasStockFormLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasStockFormLabel">
            <i class="bi bi-plus-circle"></i> 새 주식 등록
        </h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body">
        <form id="stockForm">
            <div class="mb-3">
                <label class="form-label">종목코드</label>
                <input type="text" class="form-control" name="code" required />
            </div>
            <div class="mb-3">
                <label class="form-label">종목명</label>
                <input type="text" class="form-control" name="name" required />
            </div>
            <div class="mb-3">
                <label class="form-label">현재가</label>
                <input type="number" class="form-control" name="price" required />
            </div>
            <div class="mb-3">
                <label class="form-label">등락률 (%)</label>
                <input type="number" step="0.01" class="form-control" name="rate" />
            </div>
            <div class="mb-3">
                <label class="form-label">거래량</label>
                <input type="number" class="form-control" name="volume" />
            </div>
            <div class="mb-3">
                <label class="form-label">시가총액</label>
                <input type="number" class="form-control" name="market_cap" />
            </div>
            <div class="mb-3">
                <label class="form-label">업종</label>
                <input type="text" class="form-control" name="sector" />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> 등록하기
                </button>
            </div>
        </form>
    </div>
</div>

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1055">
    <div id="toastSuccess" class="toast text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">✅ 새 주식이 성공적으로 등록되었습니다!</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>

    <div id="toastError" class="toast text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">❌ 등록 중 오류가 발생했습니다.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

{{>layouts/footer}}

<script>
    // 새로고침 버튼
    document.getElementById("refreshBtn").addEventListener("click", () => location.reload());

    // 등록 폼 처리
    document.getElementById("stockForm").addEventListener("submit", async (e) => {
        e.preventDefault();
        const form = e.target;
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        try {
            const res = await fetch("/api/stock/save", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify(data),
            });

            // 성공 처리
            if (res.ok) {
                const offcanvasEl = document.getElementById("offcanvasStockForm");
                const offcanvas = bootstrap.Offcanvas.getInstance(offcanvasEl);
                offcanvas.hide();

                form.reset();
                new bootstrap.Toast(document.getElementById("toastSuccess")).show();

                setTimeout(() => location.reload(), 1500);
            } else {
                new bootstrap.Toast(document.getElementById("toastError")).show();
            }
        } catch (err) {
            new bootstrap.Toast(document.getElementById("toastError")).show();
        }
    });
</script>
